<style>
  :root { --accent: #7c3aed; }
  .site-header {
    position: sticky; top: 0; z-index: 120;
    background: linear-gradient(90deg, rgba(17,24,39,0.98), rgba(10,12,22,0.94));
    color: #fff;
    box-shadow: 0 6px 18px rgba(2,6,23,0.6);
    border-bottom: 1px solid rgba(255,255,255,0.02);
  }

  .site-header .container {
    max-width: 1100px; margin: 0 auto; padding: .75rem 1rem; display:flex; gap:1rem; align-items:center; justify-content:space-between;
  }

  .brand { font-weight:700; font-size:1.1rem; color: white; text-decoration:none; }

  .nav ul { list-style:none; display:flex; gap:1rem; margin:0; padding:0; align-items:center; }
  .nav a { color: #e6eef8; text-decoration:none; padding:.5rem .75rem; border-radius:8px; font-weight:600; transition: background .12s, transform .12s; }
  .nav a:hover { background: rgba(255,255,255,0.03); transform: translateY(-2px); }

  #nav-toggle { display:none; background:transparent; border:0; color: white; padding:.35rem; border-radius:8px; }

  @media (max-width: 820px) {
    #nav-toggle { display:inline-flex; }
    .nav { position: absolute; right:1rem; left:1rem; top:64px; background: rgba(3,7,18,0.95); padding:1rem; border-radius:10px; display:none; }
    .nav ul { flex-direction:column; }
    .site-header.open .nav { display:block; }
  }
</style>

<script>
  const btn = document.getElementById('nav-toggle');
  const header = document.getElementById('site-header');
  if (btn && header) {
    btn.addEventListener('click', ()=>{
      const open = header.classList.toggle('open');
      btn.setAttribute('aria-expanded', String(open));
    });
  }
</script>
